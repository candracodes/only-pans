    <!-- START: SECTION 3 â€” SUBMIT RECIPE -->
    <div id='our-recipes' class='row align-items-md-stretch bg-light'>
      <h2 class='ps-5 pt-5'>Submit a Recipe</h2>
      <p class='text-gray ps-5'>Here at OnlyPans we welcome any new member
        recipes. Submit sultry recipes of your own, and share it with the rest
        of this ravenous community.</p>
      <hr class='title-border' />
      <div class='row align-items-md-stretch bg-light'>
        <!-- CONTENT AREA -->
        <div class='col-md-12'>
          <div class='h-100 p-5 rounded-3'>
            <!-- START: FORM -->
            <form class='new-recipe-form'>

              <div class='row'>
                <!-- LEFT SIDE OF FORM -->
                <div class='col-lg-6 col-md-6 col-sm-12'>
                  <!-- DISH NAME -->
                  <div class='mb-3'>
                    <label for='nameOfDish' class='form-label'>Dish Name</label>
                    <input
                      id='dish_name'
                      type='text'
                      class='form-control'
                      aria-describedby='nameOfDish'
                    />
                  </div>

                  <!-- RECIPE TYPE -->
                  <label for='recipe_type' class='form-label'>Recipe Type</label>
                  <select
                    id='recipe_type'
                    class='form-select mb-3'
                    aria-label='recipe_type'
                  >
                    <option selected>Select what category this dish belongs to</option>
                    <option value='Starters'>Starters</option>
                    <option value='Entrees'>Entrees</option>
                    <option value='Sides'>Sides</option>
                    <option value='Desserts'>Desserts</option>
                  </select>

                  <!-- INGREDIENTS -->
                  <label
                    for='ingredients'
                    class='form-label'
                  >Ingredients</label>
                  <div class='input-group mb-3'>
                    <input
                      type='text'
                      class='form-control'
                      placeholder='Type an ingredient, and hit the add button'
                      aria-label='ingredients'
                      aria-describedby='ingredients'
                      id='ingredients-input'
                    />
                    <button
                      class='btn btn-outline-secondary'
                      type='button'
                      id='ingredients-button'
                    ><i class='fas fa-plus-circle'></i> Add Ingredient</button>
                  </div>

                  <!-- DIRECTIONS -->
                  <label for='directions' class='form-label'>Directions</label>
                  <div class='input-group mb-3'>
                    <input
                      type='text'
                      class='form-control'
                      placeholder='Add a recipe step, and hit the add button'
                      aria-label='directions'
                      aria-describedby='directions'
                      id='directions-input'
                    />
                    <button
                      class='btn btn-outline-secondary'
                      type='button'
                      id='directions-button'
                    ><i class='fas fa-plus-circle'></i> Add Step</button>
                  </div>

                  <button type="submit" class="btn btn-primary">Submit Recipe</button> 
                  {{!<button
                    class='btn btn-primary'
                    type='button'
                    data-bs-toggle='modal'
                    data-bs-target='#exampleModal'
                  >Submit Recipe</button>}}
                </div>

                <!-- RIGHT SIDE OF FORM-->
                <div class='col-lg-6 col-md-6 col-sm-12 text-gray'>

                  {{! <span class="mb-5 pb-5"> }}
                  <span class='mb-5 pb-5' id='showIngredients'>

                  </span>
                  {{! </span> }}

                  <br />

                  <span class='mb-5 pb-5' id='showDirections'>

                  </span>
                </div>
              </div>

            </form>
            <!-- END: FORM -->
          </div>
        </div>
      </div>

    </div>
    <!-- END: SECTION 2 â€” SUBMIT RECIPE -->

  </div>
</main>
