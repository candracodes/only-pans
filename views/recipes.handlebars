<!-- START: MAIN -->
<main class='main-top-100'>
  <div class='container-fluid'>

    <!-- START: SECTION 1 ‚Äî INTRO -->
    <div
      id='our-recipes'
      class='row align-items-md-stretch bg-dark white-text mb-5'
    >
      <h2 class='text-white ps-5 pt-5'>All Recipes</h2>
      <h5 class='text-muted ps-5 pb-5'>See all of our recipes ‚Äî these dishes are
        ready to take you on a delicious ride.
      </h5>
    </div>
    <!-- END: SECTION 1 ‚Äî INTRO -->

    <!-- START: SECTION 2 ‚Äî ALL RECIPES + TOGGLE FOR RECIPE TYPES -->
    <div id='our-recipes' class='row align-items-md-stretch bg-light'>
      <!-- IF STATEMENT THAT DETERMINES WHAT THE HEADER WILL DISPLAY -->
      {{#if type}}
        <h2 class='ps-5 pt-5'>{{type}}</h2>
      {{else}}
        <h2 class='ps-5 pt-5'>All Recipes</h2>
      {{/if}}

      <hr class='title-border' />
      <div class='row align-items-md-stretch'>
        <!-- RECIPE DISH LOOP -->
        {{#each recipes as |recipe|}}
          <div class='col-md-3'>
            <div class='p-5 rounded-3'>
              <img class='changeMe' src={{recipe.image}} />
              <h2 class='recipe_name'>{{recipe.recipe_name}}</h2>
              <button
                id={{recipe.id}}
                class='btn btn-outline-dark viewRecipeBtn'
                type='button'
                data-bs-toggle='modal'
                data-bs-target='#exampleModal'
              >View Recipe</button>
              <button
                id={{recipe.id}}
                class='btn btn-primary favoritesBtn2'
                type='button'
                data-bs-toggle='modal'
                data-bs-target='#exampleModal2'
              ><i class='fas fa-heart'></i> Favorite</button>
            </div>
          </div>
        {{/each}}

      </div>

    </div>
    <!-- END: SECTION 2 ‚Äî ALL RECIPES + TOGGLE FOR RECIPE TYPES -->

  </div>
</main>
<!-- END: MAIN -->

