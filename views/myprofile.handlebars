<!-- START: MAIN -->
<main class='main-top-100'>
  <div class='container-fluid'>

    <!-- START: SECTION 1 — INTRO -->
    <div
      id='our-recipes'
      class='row align-items-md-stretch bg-dark white-text mb-5'
    >
      <h2 class='text-white ps-5 pt-5'>Your Profile</h2>
      <p class='text-white ps-5'>All the recipes you love are saved right here
        on your OnlyPans profile.</p>
      <hr class='title-border mb-2' />
      <ul class='text-white submenu ms-3'>
        <li class='p-3'><a href='/recipes'><i
              class='fas fa-angle-double-left'
            ></i>
            All Recipes</a></li>
      </ul>
    </div>
    <!-- END: SECTION 1 — INTRO -->

    <!-- START: SECTION 2 — RECIPES -->
    <div id='our-recipes' class='row align-items-md-stretch bg-light'>
      <h2 class='ps-5 pt-5 text-blue'>Your Saved Recipes</h2>
      <hr class='title-border' />
      <!-- ACCORDION DROPDOWN -->
      <div
        class='accordion accordion-flush ps-5 pe-5 mb-5'
        id='accordionFlushExample'
      >

        <!-- ITEM 1 -->
        <!-- start for loop here -->
         {{#each favorites as |favorite|}}
        <div class='accordion-item'>
          <h2 class='accordion-header' id='flush-headingOne'>
            <button
              class='accordion-button collapsed'
              type='button'
              data-bs-toggle='collapse'
              data-bs-target='#flush-collapseOne'
              aria-expanded='false'
              aria-controls='flush-collapseOne'
            >
              {{favorite.recipe_name}}
            </button>
          </h2>
          <div
            id='flush-collapseOne'
            class='accordion-collapse collapse'
            aria-labelledby='flush-headingOne'
            data-bs-parent='#accordionFlushExample'
          >
            <div class='accordion-body'>
              <div class='row'>
                <div class='col-lg-4 col-md-4 col-sm-12'>
                  <img src='{{favorite.image}}' width='100%' />
                </div>
                <div class='col-lg-8 col-md-8 col-sm-12'>
                  <h4>Ingredients</h4>
                  <p>{{favorite.ingredients}}</p>
                  <h4>Directions</h4>
                  <p>{{favorite.directions}}</p>
                  <button class='btn btn-outline-danger' type='button'>❌ Remove
                    From Favorites (Future Development)</button>
                </div>
              </div>

            </div>
          </div>
        </div>
        {{/each}}
